{
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/main",
            "remote": true,
            "target": "extended-remote /dev/ttyACM0",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "autorun": [
                "mon twpr enable",
                "mon swdp_scan",
                "attach 1",
                "load ${1:${workspaceFolder}/build/main}"
            ],
            "gdbpath": "gdb-multiarch"
        }
    ],
    "version": "2.0.0"
}